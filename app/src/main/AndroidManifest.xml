<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madhub.insautoreplyscript">

    <!-- The application element defines the application and its properties -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MainActivity serves as the entry point for the application -->
        <!-- This component enhances user experience by providing easy access to automation settings -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AutomationService handles background tasks for managing social media operations -->
        <!-- This service improves efficiency by allowing continuous operation without user intervention -->
        <service android:name=".AutomationService"
                 android:exported="false">
            <!-- The service enables 24/7 automated operations without running into performance bottlenecks -->
        </service>

    </application>

    <!-- Permissions required for network access and storage -->
    <!-- These permissions enhance the application's capabilities for automated operations -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Achieves seamless data connectivity for automated tasks, improving performance results -->
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Increases performance by enabling efficient network management -->
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- This permission allows the app to access stored data, improving the user's ability to manage content -->
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Enhances capabilities by allowing the application to save automated replies and settings locally for improved efficiency -->

</manifest>
